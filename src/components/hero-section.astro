---
import { Icon } from "astro-icon/components";
---

<section
	id="hero"
	class="w-full min-h-[calc(100vh-4rem)] flex items-center justify-center relative overflow-hidden"
>
	<div class="absolute inset-0 z-0 opacity-10">
		<svg width="100%" height="100%" xmlns="http://www.w3.org/2000/svg">
			<defs>
				<pattern
					id="smallGrid"
					width="20"
					height="20"
					patternUnits="userSpaceOnUse"
				>
					<path
						d="M 20 0 L 0 0 0 20"
						fill="none"
						stroke="var(--primary)"
						stroke-width="1"></path>
				</pattern>
				<pattern
					id="grid"
					width="100"
					height="100"
					patternUnits="userSpaceOnUse"
				>
					<rect width="100" height="100" fill="url(#smallGrid)"
					></rect>
					<path
						d="M 100 0 L 0 0 0 100"
						fill="none"
						stroke="var(--primary)"
						stroke-width="5"></path>
				</pattern>
			</defs>
			<rect width="100%" height="100%" fill="url(#grid)"></rect>
		</svg>
	</div>

	<div class="container mx-auto text-center px-4 z-10">
		<div class="max-w-4xl mx-auto">
			<h1
				class="text-5xl font-light tracking-tighter text-foreground sm:text-6xl md:text-7xl lg:text-8xl animate-[pulsate_5s_ease-in-out_infinite]"
			>
				Hi, I'm <span class="text-primary">zoasr</span>
			</h1>
			<h2
				class="mt-4 text-2xl md:text-4xl font-semibold text-primary tracking-wide"
			>
				Front-End Web Developer
			</h2>
			<p
				class="mt-6 max-w-2xl mx-auto text-lg text-muted-foreground md:text-xl"
			>
				I design, build and animate web applications and websites
			</p>
			<div
				class="mt-10 flex flex-col sm:flex-row justify-center items-center gap-4"
			>
				<buton
					asChild
					size="lg"
					class="px-8 py-3 text-lg shadow-[0_0_15px_hsl(var(--primary)/0.5)] hover:shadow-[0_0_25px_hsl(var(--primary)/0.7)] transition-shadow"
				>
					<a href="#projects">Explore Projects</a>
				</buton>
				<buton
					size="lg"
					class="px-8 py-3 text-lg border-primary/50 hover:bg-primary/10 hover:text-primary"
				>
					<a href="mailto:zeyadber@gmail.com">Get In Touch</a>
				</buton>
			</div>
			<div class="mt-16 flex justify-center gap-8">
				<a
					href="https://github.com/zoasr"
					target="_blank"
					rel="noopener noreferrer"
					class="text-muted-foreground hover:text-primary transition-colors transform hover:scale-110"
					aria-label="GitHub Profile"
				>
					<Icon name="pixelarticons:github" class="h-6 w-6" />
				</a>
				<a
					href="https://linkedin.com/in/zeayd-sherif"
					target="_blank"
					rel="noopener noreferrer"
					class="text-muted-foreground hover:text-primary transition-colors transform hover:scale-110"
					aria-label="LinkedIn Profile"
				>
					<Icon name="ri:linkedin-line" class="h-6 w-6" />
				</a>
				<a
					href="mailto:zeyadber@gmail.com"
					class="text-muted-foreground hover:text-primary transition-colors transform hover:scale-110"
					aria-label="Email Zeyad"
				>
					<Icon name="pixelarticons:mail" class="h-6 w-6" />
				</a>
			</div>
		</div>
	</div>
	<div class="absolute bottom-10 left-1/2 -translate-x-1/2 z-10">
		<a href="#about" aria-label="Scroll to about section">
			<Icon
				name="pixelarticons:arrow-down-box"
				class="text-primary/70 animate-bounce hover:text-primary size-9"
			/>
		</a>
	</div>
</section>

<style>
	@keyframes pulsate {
		0% {
			font-weight: 300;
		}
		50% {
			font-weight: 600;
		}
		100% {
			font-weight: 300;
		}
	}
</style>
