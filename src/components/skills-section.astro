---
// import { Code2, DatabaseZap, Palette, ToyBrick } from "lucide-react";
import { Icon } from "astro-icon/components";

const skillCategories = [
	{
		title: "Languages & Core Concepts",
		// icon: <Code2 class="w-8 h-8 text-primary" />,
		icon: {
			name: "pixelarticons:code",
			class: "h-8 w-8 text-primary",
		},
		skills: [
			"HTML",
			"CSS",
			"JavaScript (ES6+)",
			"TypeScript",
			"Python",
			"C",
			"C++",
			"PHP",
			"OOP",
		],
	},
	{
		title: "Frontend Frameworks & Libraries",
		// icon: <ToyBrick class="w-8 h-8 text-primary" />,
		icon: {
			name: "pixelarticons:card-stack",
			class: "h-8 w-8 text-primary",
		},
		skills: [
			"React.js",
			"Next.js",
			"Svelte (SvelteKit)",
			"Solid.js",
			"Astro",
			"Vite",
			"TanStack (Router, Query, Start)",
		],
	},
	{
		title: "Styling & Creative Coding",
		// icon: <Palette class="w-8 h-8 text-primary" />,
		icon: {
			name: "streamline-pixel:design-color-palette-sample",
			class: "h-8 w-8 text-primary",
		},
		skills: ["TailwindCSS", "p5.js"],
	},
	{
		title: "Backend, Databases & Tools",
		// icon: <DatabaseZap class="w-8 h-8 text-primary" />,
		icon: {
			name: "streamline-pixel:coding-apps-websites-database",
			class: "h-8 w-8 text-primary",
		},
		skills: ["Node.js", "MySQL", "PostgreSQL", "Supabase", "Git", "GitHub"],
	},
];
---

<section id="skills" class="w-full py-16 md:py-24">
	<div class="container mx-auto px-4">
		<div class="text-center mb-16">
			<h2
				class="text-3xl font-bold tracking-tighter text-foreground sm:text-4xl md:text-5xl"
			>
				My Tech Arsenal
			</h2>
			<div class="section-title-underline"></div>
		</div>
		<div class="grid grid-cols-1 md:grid-cols-2 gap-8">
			{
				skillCategories.map((category) => (
					<div class="futuristic-card p-6 rounded-lg">
						<div class="flex items-center gap-4 mb-4">
							<Icon
								name={category.icon.name}
								class={category.icon.class}
							/>
							{/* {category.icon} */}
							<h3 class="text-xl font-semibold text-foreground">
								{category.title}
							</h3>
						</div>
						<div class="flex flex-wrap gap-2">
							{category.skills.map((skill) => (
								<span class="px-3 py-1.5 bg-primary/10 text-primary text-sm font-medium rounded-md hover:bg-primary/20 transition-colors cursor-default">
									{skill}
								</span>
							))}
						</div>
					</div>
				))
			}
		</div>
	</div>
</section>
